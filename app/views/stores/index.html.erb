<h1>Stores</h1>
<nav><%= link_to "Add Store", new_store_path %></nav>
<h3>
<ul>
  <% @stores.each do |store| %>
  <li><%= link_to store.name, store_path(store) %><br>
    Total: $<%= store.total_spent %> </li>
    <% @grandTotal = @grandTotal + store.total_spent %>
  <% end %>
  <p>Total Spent: $<%= @grandTotal %></p>
</ul>
</h3>
